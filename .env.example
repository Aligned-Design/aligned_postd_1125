# POSTD Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================================================
# CORE SERVICES (REQUIRED)
# ============================================================================

# Supabase Configuration
# Get these from: https://app.supabase.com → Your Project → Settings → API
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here
SUPABASE_URL=https://your-project-id.supabase.co

# ============================================================================
# AI PROVIDERS (OPTIONAL - At least one required for AI features)
# ============================================================================

# OpenAI Configuration
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Override default models
# OPENAI_MODEL_TEXT=gpt-4o-mini
# OPENAI_MODEL_ADVANCED=gpt-4o
# OPENAI_MODEL_CHEAP=gpt-4o-mini
# OPENAI_MODEL_EMBEDDING=text-embedding-3-small
# OPENAI_EMBEDDING_DIMENSIONS=512

# Anthropic Configuration
# Get from: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# AI Provider Selection
# Options: "auto" (selects available provider), "openai", "anthropic"
AI_PROVIDER=auto

# ============================================================================
# APPLICATION CONFIGURATION (REQUIRED)
# ============================================================================

# Node Environment
# Options: "development", "staging", "production"
NODE_ENV=development

# Application Port (optional, defaults to 3000)
PORT=3000

# Application URLs
# For local development, use http://localhost:5173 (client) and http://localhost:3000 (server)
# For production, use your actual domain
VITE_APP_URL=http://localhost:5173
VITE_API_BASE_URL=http://localhost:3000/api
CLIENT_URL=http://localhost:5173

# ============================================================================
# BUILDER.IO (OPTIONAL)
# ============================================================================

# Builder.io Configuration
# Get from: https://builder.io → Account Settings → API Keys
VITE_BUILDER_PUBLIC_KEY=your-builder-public-key-here
BUILDER_PRIVATE_KEY=your-builder-private-key-here
BUILDER_WEBHOOK_SECRET=your-webhook-secret-here

# ============================================================================
# EMAIL SERVICE (OPTIONAL)
# ============================================================================

# SendGrid Configuration
# Get from: https://app.sendgrid.com → Settings → API Keys
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
EMAIL_SERVICE_PROVIDER=sendgrid
EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# ============================================================================
# OAUTH CREDENTIALS - SOCIAL MEDIA PLATFORMS (OPTIONAL)
# ============================================================================

# Meta (Facebook/Instagram) OAuth
# Get from: https://developers.facebook.com/apps
META_CLIENT_ID=your-meta-app-id-here
META_CLIENT_SECRET=your-meta-app-secret-here
FACEBOOK_CLIENT_ID=your-facebook-app-id-here
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret-here
INSTAGRAM_CLIENT_ID=your-instagram-app-id-here
INSTAGRAM_CLIENT_SECRET=your-instagram-app-secret-here

# Legacy Facebook/Instagram Direct Access (if not using OAuth)
FACEBOOK_PAGE_ID=your-facebook-page-id-here
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token-here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-instagram-business-account-id-here
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token-here

# LinkedIn OAuth
# Get from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your-linkedin-client-id-here
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret-here
LINKEDIN_ORGANIZATION_ID=your-linkedin-organization-id-here
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token-here

# Twitter/X OAuth
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_CLIENT_ID=your-twitter-client-id-here
TWITTER_CLIENT_SECRET=your-twitter-client-secret-here
TWITTER_API_KEY=your-twitter-api-key-here
TWITTER_API_SECRET=your-twitter-api-secret-here
TWITTER_BEARER_TOKEN=your-twitter-bearer-token-here
TWITTER_ACCOUNT_ID=your-twitter-account-id-here

# TikTok OAuth
# Get from: https://developers.tiktok.com/apps
TIKTOK_CLIENT_KEY=your-tiktok-client-key-here
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret-here
TIKTOK_REDIRECT_URI=https://yourdomain.com/api/integrations/tiktok/callback
TIKTOK_BUSINESS_ACCOUNT_ID=your-tiktok-business-account-id-here
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token-here

# Google OAuth (for Google Business Profile, YouTube, etc.)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_BUSINESS_ACCOUNT_ID=your-google-business-account-id-here
GOOGLE_API_KEY=your-google-api-key-here

# YouTube (if using separately from Google OAuth)
YOUTUBE_CHANNEL_ID=UCyour-youtube-channel-id-here
YOUTUBE_API_KEY=your-youtube-api-key-here

# Pinterest OAuth
PINTEREST_BUSINESS_ACCOUNT_ID=your-pinterest-business-account-id-here
PINTEREST_ACCESS_TOKEN=your-pinterest-access-token-here

# Snapchat OAuth
SNAPCHAT_BUSINESS_ACCOUNT_ID=your-snapchat-business-account-id-here
SNAPCHAT_ACCESS_TOKEN=your-snapchat-access-token-here

# ============================================================================
# WEBSOCKET & REAL-TIME (OPTIONAL)
# ============================================================================

# Socket.io CORS Origin
# Should match your VITE_APP_URL
SOCKETIO_CORS_ORIGIN=http://localhost:5173

# ============================================================================
# MONITORING & ANALYTICS (OPTIONAL)
# ============================================================================

# Sentry Error Tracking
# Get from: https://sentry.io
SENTRY_DSN=your-sentry-dsn-here
ENABLE_SENTRY=false

# Analytics ID (PostHog, Mixpanel, etc.)
VITE_ANALYTICS_ID=your-analytics-id-here

# ============================================================================
# DEVELOPMENT & DEBUGGING (OPTIONAL)
# ============================================================================

# Crawler Configuration
CRAWL_USER_AGENT=POSTDBot/1.0
CRAWL_MAX_PAGES=50
CRAWL_TIMEOUT_MS=60000

# Debug Flags (set to "true" to enable)
# DEBUG_SQUARESPACE_IMAGES=false
# DEBUG_IMAGE_CLASSIFICATION=false
# DEBUG_LOGO_DETECT=false
# DEBUG_COLOR_EXTRACT=false

# ============================================================================
# NOTES
# ============================================================================
#
# 1. Required variables are marked with comments above
# 2. Optional variables can be left empty if not using that feature
# 3. For production, set NODE_ENV=production
# 4. VITE_* variables are exposed to the client-side code
# 5. Variables without VITE_ prefix are server-side only
# 6. Never commit actual secrets to version control
# 7. Use environment-specific .env files (.env.local, .env.production, etc.)
#
# For detailed setup instructions, see:
# - docs/ENVIRONMENT_SETUP.md
# - server/utils/validate-env.ts (source of truth for validation rules)
