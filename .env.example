# ============================================================================
# ALIGNED AI - ENVIRONMENT VARIABLES
# ============================================================================

# ============================================================================
# SECURITY - CRITICAL
# ============================================================================

# JWT Authentication
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here-change-in-production

# Data Encryption Key (AES-256)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-encryption-key-here-change-in-production

# HMAC Secret for signatures
# Generate with: openssl rand -base64 32
HMAC_SECRET=your-hmac-secret-here-change-in-production

# ============================================================================
# DATABASE - SUPABASE
# ============================================================================

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# ============================================================================
# APPLICATION
# ============================================================================

NODE_ENV=development
VITE_APP_URL=http://localhost:5173
PORT=3000

# ============================================================================
# PAYMENTS - STRIPE
# ============================================================================

STRIPE_SECRET_KEY=sk_test_your-test-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-test-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================================================
# EMAIL - SENDGRID
# ============================================================================

SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@aligned.ai
SENDGRID_FROM_NAME=Aligned AI

# ============================================================================
# AI PROVIDERS
# ============================================================================

# OpenAI
OPENAI_API_KEY=sk-your-openai-key

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# ============================================================================
# BUILDER.IO
# ============================================================================

BUILDER_PUBLIC_API_KEY=your-builder-public-key
BUILDER_PRIVATE_API_KEY=your-builder-private-key

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# PostHog (Analytics)
POSTHOG_API_KEY=your-posthog-key
POSTHOG_HOST=https://app.posthog.com

# ============================================================================
# SOCIAL PLATFORM OAUTH
# ============================================================================

# Meta (Facebook/Instagram)
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# TikTok
TIKTOK_CLIENT_ID=your-tiktok-client-id
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# Google Business Profile
GBP_CLIENT_ID=your-gbp-client-id
GBP_CLIENT_SECRET=your-gbp-client-secret

# ============================================================================
# OTHER INTEGRATIONS
# ============================================================================

# WordPress
WORDPRESS_API_URL=https://your-site.com/wp-json
WORDPRESS_API_KEY=your-wordpress-key

# Mailchimp
MAILCHIMP_API_KEY=your-mailchimp-key
MAILCHIMP_SERVER_PREFIX=us1

# Zapier
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your-hook

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Debug
DEBUG=false
LOG_LEVEL=info

# Mock services in development
MOCK_OPENAI=false
MOCK_STRIPE=false
MOCK_EMAIL=false

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Session
SESSION_TIMEOUT_MINUTES=60
REFRESH_TOKEN_EXPIRY_DAYS=7

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:8080

# IP Filtering (comma-separated)
IP_ALLOWLIST=
IP_BLOCKLIST=

# ============================================================================
# NOTES
# ============================================================================

# - Never commit this file with real secrets
# - Use .env.local for local development
# - Set production secrets in Vercel dashboard
# - Rotate secrets every 90 days
# - Keep this template updated with new variables
