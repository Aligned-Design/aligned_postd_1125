# ============================================================================
# POSTD Environment Variables Example
# ============================================================================
# Copy this file to .env.local and fill in real values
# Run `pnpm run check:env` to verify your configuration
# ============================================================================

# ============================================================================
# REQUIRED - AI PROVIDERS (At least one is required)
# ============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic/Claude Configuration (fallback if OpenAI fails)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Optional: Override default AI models
# OPENAI_MODEL=gpt-5-mini
# OPENAI_MODEL_TEXT=gpt-5-mini
# OPENAI_MODEL_ADVANCED=gpt-5.1
# OPENAI_MODEL_CHEAP=gpt-5-nano
# OPENAI_MODEL_EMBEDDING=text-embedding-3-large
# OPENAI_EMBEDDING_DIMENSIONS=512
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ============================================================================
# REQUIRED - SUPABASE
# ============================================================================

# Server-side Supabase URL
SUPABASE_URL=https://yourproject.supabase.co

# Server-side Service Role Key (has admin access - keep secret!)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-service-role-key

# Client-side (public) Supabase configuration
VITE_SUPABASE_URL=https://yourproject.supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-anon-key

# ============================================================================
# REQUIRED FOR PRODUCTION - SERVER
# ============================================================================

# Environment (development, test, production)
NODE_ENV=development

# Server port (default: 3000 for dev, 8080 for Vite proxy)
PORT=3000

# JWT secret for auth tokens (REQUIRED in production, auto-generated in dev)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-strong-jwt-secret-here-min-32-chars

# Public URL of the app (used for CORS, redirects)
VITE_APP_URL=http://localhost:8080

# ============================================================================
# OPTIONAL - EMAIL (SendGrid)
# ============================================================================

# SendGrid API Key for transactional emails
# SENDGRID_API_KEY=SG.your-sendgrid-key

# From address for outgoing emails
# EMAIL_FROM_ADDRESS=noreply@yourapp.com

# ============================================================================
# OPTIONAL - MONITORING
# ============================================================================

# Analytics tracking ID
# VITE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Enable Sentry error tracking
# VITE_ENABLE_SENTRY=true

# ============================================================================
# OPTIONAL - CRAWLER CONFIGURATION
# ============================================================================

# Maximum pages to crawl per website
# CRAWL_MAX_PAGES=50

# Crawler timeout in milliseconds
# CRAWL_TIMEOUT_MS=60000

# Custom user agent for crawler
# CRAWL_USER_AGENT=POSTDBot/1.0

# ============================================================================
# OPTIONAL - FEATURE FLAGS (Client-side)
# ============================================================================

# Enable studio sidebar
# VITE_FEATURE_STUDIO_SIDEBAR=true

# Enable studio alignment tools
# VITE_FEATURE_STUDIO_ALIGN_TOOLS=true

# Enable AI copy generation v1
# VITE_FEATURE_AI_COPY_V1=true

# Enable AI color palette v1
# VITE_FEATURE_AI_PALETTE_V1=true

# Auto-run onboarding workflow
# VITE_FEATURE_ONBOARDING_AUTO_RUN_WORKFLOW=true

# ============================================================================
# OPTIONAL - DEBUG FLAGS (Development only)
# ============================================================================

# Enable verbose logging
# VERBOSE=true

# Debug color extraction
# DEBUG_COLOR_EXTRACT=true

# Debug logo detection
# DEBUG_LOGO_DETECT=true

# Debug image classification
# DEBUG_IMAGE_CLASSIFICATION=true

# Debug Squarespace image handling
# DEBUG_SQUARESPACE_IMAGES=true

# Debug media database operations
# DEBUG_MEDIA_DB=true

# Enable pipeline persistence
# PIPELINE_PERSISTENCE_ENABLED=true

# ============================================================================
# OPTIONAL - API OVERRIDES
# ============================================================================

# Override API base URL for testing
# API_BASE_URL=http://localhost:8080

# Custom ping response message
# PING_MESSAGE=pong
