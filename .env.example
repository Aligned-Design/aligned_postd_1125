# ============================================================================
# EMAIL SERVICE
# ============================================================================
SENDGRID_API_KEY=SG.your-sendgrid-api-key
EMAIL_SERVICE_PROVIDER=sendgrid
EMAIL_SERVICE_ENABLED=true
EMAIL_FROM=noreply@postd.ai
EMAIL_FROM_ADDRESS=noreply@postd.ai
